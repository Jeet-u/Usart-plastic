<style>
 @import url('https://www.w3schools.com/w3css/4/w3.css');
 @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css');

 header {
     background-color: var(--quaternary-color);
     padding: 10px 20px;
 }

 .navbar {
     display: flex;
     justify-content: space-between;
     align-items: center;
     flex-wrap: wrap;
 }

 .logo {
     font-size: var(--font-size-stat);
     font-weight: bold;
     color: var(--secondary-color);
 }

 .nav-links {
     display: flex;
     gap: 15px;
     margin-right: 20px;
     position: relative;
 }

 .nav-links a {
     text-decoration: none;
     color: var(--primary-color);
 }

 .dropdown-content {
     display: none;
     position: absolute;
     background-color: var(--quaternary-color);
     min-width: 160px;
     box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
     z-index: 1;
 }

 .dropdown-content a {
     color: var(--primary-color);
     padding: 12px 16px;
     text-decoration: none;
     display: block;
 }

 .nav-links a:hover + .dropdown-content,
 .dropdown-content:hover {
     display: block;
 }

 .search-cart {
     display: flex;
     align-items: center;
     gap: 10px;
 }

 .search-container {
     position: relative;
     display: flex;
     align-items: center;
 }

 .search-icon {
     position: absolute;
     left: 10px;
     font-size: 16px;
     color: var(--tertiary-color);
     cursor: pointer;
 }

 .search-bar {
     padding: 8px 8px 8px 30px;
     border: 1px solid var(--tertiary-color);
     border-radius: 20px;
     transition: width 0.3s;
 }



 .icons {
     display: flex;
     gap: 10px;
 }

 .cart-icon,
 .user-icon {
     font-size: 20px;
     cursor: pointer;
 }

 .icons i {
     font-size: 24px;
     color: var(--primary-color);
 }

 .hamburger-menu {
     display: none;
     cursor: pointer;
 }

 /* Media Queries for Responsiveness */
 @media (max-width: 768px) {
     .navbar {
         flex-direction: column;
         align-items: center;
     }

     .nav-links {
         display: none;
         flex-direction: column;
         align-items: center;
         margin-right: 0;
         gap: 10px;
         margin-top: 10px;
     }

     .nav-links.active {
         display: flex;
     }

     .hamburger-menu {
         display: block;
     }

     .search-cart {
         flex-direction: column;
         align-items: center;
         gap: 10px;
         margin-top: 10px;
     }

     .search-bar {
         width: 100%;
         max-width: 300px;
     }

     .search-bar:focus {
         width: 100%;
         max-width: 300px;
     }

     .icons {
         flex-direction: row;
         justify-content: center;
         width: 100%;
     }
 }

 @media (max-width: 480px) {
     .logo {
         font-size: 24px;
     }

     .search-bar {
         padding: 8px 8px 8px 30px;
         width: 100%;
         max-width: 200px;
     }

     .search-bar:focus {
         width: 100%;
         max-width: 200px;
     }

     .icons i {
         font-size: 20px;
     }
 }
</style>

<script>
 document.getElementById('hamburger-menu').addEventListener('click', function () {
     var navLinks = document.getElementById('nav-links');
     if (navLinks.classList.contains('active')) {
         navLinks.classList.remove('active');
     } else {
         navLinks.classList.add('active');
     }
 });

 document.querySelector('.search-icon').addEventListener('click', function () {
     var searchBar = document.getElementById('search-bar');
     if (searchBar.classList.contains('active')) {
         searchBar.classList.remove('active');
     } else {
         searchBar.classList.add('active');
     }
 });
</script>
